dest <- "c:\\Users\\Lukas\\Desktop\\PS2013\\navrhy_zakonov\\ps6" #destination of the list
myfiles <- list.files(path = dest, pattern = "pdf", full.names = TRUE) #list of files
subset <- myfiles[c(1:10)] #10 file subset for testing purposes
datalist <- myfiles #all files

#for (i in datalist) {

for (i in subset) {  

  lapply(subset, function(i) system(paste('"C:/Program Files/xpdfbin-win-3.04/bin64/pdftotext.exe"', paste0('"', i, '"')), wait = FALSE) ) #apply function for PDF conversion without any parameters - additional parameters can be inserted in paste0 function in '' after i statement

}
